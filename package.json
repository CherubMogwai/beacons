{
  "name": "beacons",
  "version": "0.0.1",
  "description": "RESTful JSON Service for geolocation of custom beacon hardware, returning proximity information for light control",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "NODE_ENV=test NODE_PATH=./ NODE_CONFIG_DIR=../config nyc ava",
    "report": "nyc report --reporter=html",
    "lint": "eslint . --ext .js",
    "ngrok": "ngrok http -subdomain=beacons --authtoken $NGROK_API_TOKEN $PORT",
    "start": "node ."
  },
  "ava": {
    "verbose": true,
    "timeout": "1m",
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "files": [
      "test/*.js"
    ],
    "source": [
      "**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "test/*",
      "node_modules"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CherubMogwai/beacons.git"
  },
  "keywords": [
    "beacons",
    "restful",
    "json",
    "proximity",
    "geolocation",
    "postgresql"
  ],
  "author": "Brent Luehr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CherubMogwai/beacons/issues"
  },
  "homepage": "https://github.com/CherubMogwai/beacons#readme",
  "dependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.14.0",
    "babel-plugin-espower": "^3.0.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "^6.16.3",
    "bluebird": "^3.4.6",
    "config": "^1.21.0",
    "js-yaml": "^3.6.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-router": "^7.0.1",
    "koa-validate": "^1.0.7",
    "pg": "^6.1.0",
    "transform-runtime": "0.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-stage-2": "^7.0.0",
    "ava": "^0.16.0",
    "babel-eslint": "^6.1.2",
    "eslint": "^3.19.0",
    "nyc": "^8.3.0",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0"
  }
}
